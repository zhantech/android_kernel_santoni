assert(getprop("ro.product.device") == "santoni" || getprop("ro.build.product") == "santoni" || abort("E3004: This package is for device: santoni; this device is " + getprop("ro.product.device") + "."););
ui_print("-----------------------------------");
ui_print("-         Clarity Kernel          -");
ui_print("-----------------------------------");
ui_print("-           AOSP NOUGAT           -");
ui_print("-----------------------------------");
ui_print("-    Redmi 4X | HM4X | Santoni    -");
ui_print("-----------------------------------");
show_progress(1.000000, 0);
package_extract_dir("clarity", "/tmp/clarity");
set_metadata("/tmp/clarity/busybox", "uid", 0, "gid", 0, "mode", 0777);
set_metadata("/tmp/clarity/mkbootimg.sh", "uid", 0, "gid", 0, "mode", 0777);
set_metadata("/tmp/clarity/mkbootimg", "uid", 0, "gid", 0, "mode", 0777);
set_metadata("/tmp/clarity/unpackbootimg", "uid", 0, "gid", 0, "mode", 0777);
set_metadata("/tmp/clarity/ft5336.sh", "uid", 0, "gid", 0, "mode", 0777);
set_progress(0.100000);
ui_print(" * Dump boot.img");
run_program("/tmp/clarity/busybox", "dd", "if=/dev/block/bootdevice/by-name/boot", "of=/tmp/clarity/boot.img");
set_progress(0.300000);
ui_print(" * Unpack boot.img");
run_program("/tmp/clarity/unpackbootimg", "-i", "/tmp/clarity/boot.img", "-o", "/tmp/clarity/");
set_progress(0.400000);
ui_print(" * repack newboot.img");
run_program("/tmp/clarity/mkbootimg.sh");
set_progress(0.500000);
ui_print(" * Flashing newboot.img");
run_program("/tmp/clarity/busybox", "dd", "if=/tmp/clarity/newboot.img", "of=/dev/block/bootdevice/by-name/boot");
set_progress(0.600000);
ui_print("-----------------------------------");
ui_print("-      Instalation Completed      -");
ui_print("-----------------------------------");
ui_print("-  https://ryan-andri.github.io   -");
ui_print("-----------------------------------");
ifelse(is_mounted("/system"), unmount("/system"));
mount("ext4", "EMMC", "/dev/block/bootdevice/by-name/system", "/system", "");
run_program("/tmp/clarity/ft5336.sh");
ifelse(is_mounted("/system"), unmount("/system"));
delete_recursive("/tmp/clarity");
set_progress(1.000000);
